generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
  signature String @default("Sunshine")
}

enum Tag {
  vent
  advice
  thoughts
  positivity
  love
  family
  friendship
  school
}

model Reply {
  id        Int      @id @default(autoincrement())
  letterId Int
  reply     String
  owner     String
  createdAt DateTime @default(now())
  Letter     Letter  @relation(fields: [letterId], references: [id], onDelete: Cascade)
  signature String @default("Sunshine")
}

model Letter {
  id        Int      @id @default(autoincrement())
  text      String
  reply     Reply[]
  owner     String
  tags      Tag[]
  createdAt DateTime @default(now())
  signature String @default("Sunshine")
}
